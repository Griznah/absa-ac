# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_channel_id_here

# API Server Configuration (Optional)
# Set API_ENABLED=true to enable the REST API server
# API_ENABLED=false
# API_PORT=3001
# API_BEARER_TOKEN=your-secure-random-token-here

# CORS Configuration (Optional)
# Comma-separated list of allowed CORS origins
# Leave empty for no CORS. Use "*" ONLY for dev/test and set ALLOW_CORS_ANY=true.
# API_CORS_ORIGINS=https://example.com,https://app.com
# ALLOW_CORS_ANY=false

# Trusted proxy IPs for X-Forwarded-For validation (comma-separated, empty default)
# Required when behind reverse proxy. Leave empty for direct internet exposure.
# API_TRUSTED_PROXY_IPS=10.0.0.1,10.0.0.2
