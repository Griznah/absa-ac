# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_channel_id_here

# API Server Configuration (Optional)
# Enable the REST API server for config management
API_ENABLED=false
# Port for the API server (default: 8080)
API_PORT=8080
# Bearer token for API authentication (required if API_ENABLED=true)
API_BEARER_TOKEN=your_secure_api_token_here
# Comma-separated list of allowed CORS origins (optional)
# Empty = no CORS, "*" = all origins, "https://example.com,https://app.com" = specific origins
API_CORS_ORIGINS=
