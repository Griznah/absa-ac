# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_channel_id_here

# API Server Configuration (Optional)
# Enable the REST API server for config management
API_ENABLED=false
# Port for the API server (default: 8080)
API_PORT=8080
# Bearer token for API authentication (required if API_ENABLED=true)
# API_BEARER_TOKEN must be at least 32 random characters. Generate with:
#   head -c 48 /dev/urandom | base64
API_BEARER_TOKEN=CHANGEME-REQUIRED
# Comma-separated list of allowed CORS origins (optional)
# Empty = no CORS, "*" = all origins (dev/test mode only!),
# "https://example.com,https://app.com" = specific allowlist (REQUIRED in production)
API_CORS_ORIGINS=

# ALLOW_CORS_ANY: Set to 'true' to allow '*' (wildcard) CORS origins (development/testing ONLY).
# In production, must be unset or 'false' (startup will fail if '*' is used by mistake).
ALLOW_CORS_ANY=false
